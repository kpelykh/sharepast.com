<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <servers>

        <server>
            <id>kp.releases.http</id>
            <username>admin</username>
            <password>admin123</password>
        </server>

        <server>
            <id>kp.snapshots.http</id>
            <username>admin</username>
            <password>admin123</password>
        </server>

        <server>
            <id>thirdparty.releases.http</id>
            <username>admin</username>
            <password>admin123</password>
        </server>

        <server>
            <id>thirdparty.snapshots.http</id>
            <username>admin</username>
            <password>admin123</password>
        </server>

    </servers>

   <mirrors>
    <mirror>
      <id>local.nexus.public</id>
      <mirrorOf>*</mirrorOf>
      <url>http://localhost:8081/nexus/content/groups/public</url>
    </mirror>
  </mirrors>

    <profiles>
        <profile>
            <id>nexus</id>
            <repositories>
                <!-- snapshots are disabled by default, so in order to download them from mirror,
                repository needs to be configured to allow them -->
                <repository>
                    <id>kp.nexus.public</id>
                    <url>http://localhost:8081/nexus/content/groups/public</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                    <name>Maven Repository Switchboard</name>
                </repository>
            </repositories>
            <pluginRepositories>
                <pluginRepository>
                    <id>kp.nexus.public</id>
                    <url>http://localhost:8081/nexus/content/groups/public</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>

  <activeProfiles>
    <!--make the profile active all the time -->
    <activeProfile>nexus</activeProfile>
  </activeProfiles>

  <pluginGroups>
    <pluginGroup>org.mortbay.jetty</pluginGroup>
    <pluginGroup>org.codehaus.mojo</pluginGroup>
    <pluginGroup>org.sonatype.maven.plugins</pluginGroup>        
  </pluginGroups>

</settings>

