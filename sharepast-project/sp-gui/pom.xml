  <artifactId>sp-gui</artifactId>
  <name>SP GUI</name>
  <description>SP GUI resources</description>

    <dependencies>

        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>sp-commons</artifactId>
